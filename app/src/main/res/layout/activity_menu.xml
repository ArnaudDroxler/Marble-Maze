<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="he_arc.marble_mazze.MenuActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMenu"
        tools:text="Choix du niveau"
        android:textSize="36sp"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textNomNiveau1"
        tools:text="Niveau : 1"
        android:textSize="22sp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textMenu"
        android:layout_alignStart="@+id/textMenu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textScoreNiveau1"
        tools:text="Score : 0"
        android:textSize="18sp"
        android:layout_below="@+id/textNomNiveau1"
        android:layout_alignStart="@+id/textNomNiveau1"
        android:layout_marginTop="10dp" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStart1"
        android:elevation="0dp"
        tools:text="Start"
        android:layout_alignTop="@+id/textNomNiveau1"
        android:layout_alignEnd="@+id/textMenu" />


</RelativeLayout>
